# ========================
# Security & Encryption (REQUIRED)
# ========================
# Generate with: openssl rand -hex 32
SECRET_ENCRYPTION_KEY=REPLACE_WITH_GENERATED_KEY
NEXTAUTH_URL=https://your-site-name.netlify.app
NEXTAUTH_SECRET=REPLACE_WITH_GENERATED_KEY

# ========================
# Farcaster/Neynar Integration (REQUIRED)
# ========================
# Get keys from: https://neynar.com/dashboard
NEYNAR_API_KEY=REPLACE_WITH_NEYNAR_API_KEY
NEYNAR_SECRET_KEY=REPLACE_WITH_NEYNAR_SECRET_KEY
NEXT_PUBLIC_NEYNAR_CLIENT_ID=REPLACE_WITH_NEYNAR_CLIENT_ID

# FID for auto-connecting Farcaster users (CONFIGURED)
NEXT_PUBLIC_FARCASTER_FID=1378286

# ========================
# Base Network Configuration (CONFIGURED)
# ========================
BASE_RPC_URL=https://mainnet.base.org
BASE_RPC_URL_FALLBACK=https://base-mainnet.public.blastapi.io
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_CHAIN_NAME=Base
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org
